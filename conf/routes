# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET     /                                                       @controllers.Application.index
GET     /ui/admin/list/Project                                  @controllers.Application.adminUIProjectList(limit:Int ?= 10, page:Int ?= 0)
GET     /ui/admin/list/:itemType/:parentId                      @controllers.Application.adminUIChildList(itemType, parentId:Long, limit:Int ?= 10, page:Int ?= 0)
GET     /ui/admin/create/:itemType/:parentId                    @controllers.Application.adminUICreate(parentId:Long, itemType, limit:Int ?= 10, page:Int ?= 0)
GET     /ui/admin/edit/:itemType/:parentId/:itemId              @controllers.Application.adminUIEdit(parentId:Long, itemType, itemId:Long, limit:Int ?= 10, page:Int ?= 0)
GET     /ui/admin/users                                         @controllers.Application.users(limit:Int ?= 10, page:Int ?= 0)
GET     /ui/admin/stats                                         @controllers.Application.stats
GET     /ui/user/profile                                        @controllers.Application.profile
GET     /auth/authenticate                                      @controllers.AuthController.authenticate
GET     /auth/signout                                           @controllers.AuthController.signOut
GET     /auth/generateAPIKey                                    @controllers.AuthController.generateAPIKey
GET     /refreshProfile                                         @controllers.Application.refreshProfile
GET     /javascriptRoutes                                       @controllers.Application.javascriptRoutes
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                           @controllers.Assets.at(path="/public", file)
GET     /webjars/*file                                          @controllers.WebJarAssets.at(file)

->  /api/v2     apiv2.Routes

